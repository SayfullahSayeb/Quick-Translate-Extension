{
  "manifest_version": 3,
  "name": "Quick Translate",
  "version": "1.0",
  "description": "Translate text instantly without visiting Google Translate",
  "permissions": ["activeTab", "storage", "runtime"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}